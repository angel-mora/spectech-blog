<p id="notice"><%= notice %></p>
<div class="container">
  <div class="d-flex flex-column">
    <%= content_tag :h2, @article.title, class: 'article-title' %>

    <%= render partial: "votes" %>

    <% if @article.image.attached? %>
      <%= image_tag url_for(@article.image), width:'300px' %>
    <% end %>

    <div class="d-flex flex-column">
      <%= content_tag :p, markdown(@article.text), class: 'article-text' %>
    </div>

    <% if @current_user == @article.author %>
      <%= link_to 'Edit', edit_category_article_path(@article) %>
    <% end %>
    <%= link_to 'Back', category_articles_path(@category) %>
  </div>
</div
